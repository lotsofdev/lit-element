{
  "exclude": [
    "lotsof.config.ts",
    "**/*.test.*",
    "dist/**/*",
    "node_modules/**/*",
    "vendor/**/*"
  ],
  "compilerOptions": {
    "noImplicitAny": false,
    "rootDir": "src/js",
    "outDir": "dist/js",
    "skipLibCheck": true,
    "strict": true,
    "target": "es6",
    "module": "nodenext",
    "sourceMap": true,
    "declaration": true,

    "esModuleInterop": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "moduleResolution": "nodenext"
  }
}
